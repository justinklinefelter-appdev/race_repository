<!-- Validation failure messages -->
<% if @comment.errors.any? %>
  <% @comment.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit comment #<%= @comment.id %>
</h1>

<hr>

<!-- Form comment start -->
<form action="/update_comment/<%= @comment.id %>" method="post">
<!-- Form comment end -->

  <!-- Label and input for body start -->
  <div class="form-group">
    <label for="body">
      Body
    </label>

    <!-- Input for body start -->
    <input type="text" id="body" name="body" class="form-control" value="<%= @comment.body %>">
    <!-- Input for body end -->
  </div>
  <!-- Label and input for body end -->

  <!-- Label and input for commentor_id start -->
  <!-- Label and input for commentor_id end -->

  <!-- Label and input for user_race_id start -->
  <div class="form-group">
    <label for="user_race_id">
      User race
    </label>

    <!-- Input for user_race_id start -->
    <%= select_tag(:user_race_id, options_from_collection_for_select(UserRace.all, :id, :user_id, @comment.user_race_id), :class => "form-control") %>
    <!-- Input for user_race_id end -->
  </div>
  <!-- Label and input for user_race_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update comment
  </button>
</form>

<hr>

<a href="/comments">
  Go back
</a>
