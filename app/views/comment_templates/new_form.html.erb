<h1>
  Add a new comment
</h1>


<hr>

<!-- Form comment start -->
<form action="/create_comment" method="post">
<!-- Form comment end -->

  <!-- Label and input for body start -->
  <div class="form-group">
    <label for="body">
      Body
    </label>

    <!-- Input for body start -->
    <input type="text" id="body" name="body" class="form-control">
    <!-- Input for body end -->
  </div>
  <!-- Label and input for body end -->

  <!-- Label and input for commentor_id start -->
  <!-- Input for "commentor_id" start -->
  <input type="hidden" name="commentor_id" value="<%= current_user.id %>">
  <!-- Input for "commentor_id" end -->
  <!-- Label and input for commentor_id end -->

  <!-- Label and input for user_race_id start -->
  <div class="form-group">
    <label for="user_race_id">
      User race
    </label>

    <!-- Input for user_race_id start -->
    <%= select_tag(:user_race_id, options_from_collection_for_select(UserRace.all, :id, :user_id, @comment.user_race_id), :class => "form-control") %>
    <!-- Input for user_race_id end -->
  </div>
  <!-- Label and input for user_race_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Create comment
  </button>
</form>

<hr>

<a href="/comments">
  Go back
</a>
