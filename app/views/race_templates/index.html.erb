<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All races
    </h1>

    <a href="/races/new" class="btn btn-block btn-outline-secondary">
      Add a new race
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Event
        </th>

        <th>
          Year
        </th>

        <th>
          Location
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @races.each do |race| %>
      <tr>
        <!-- Display race.id start -->
        <td>
          <%= race.id %>
        </td>
        <!-- Display race.id end -->

        <!-- Display race.name start -->
        <td>
          <%= race.name %>
        </td>
        <!-- Display race.name end -->

        <!-- Display race.event_id start -->
        <td>
          <%= race.event_id %>
        </td>
        <!-- Display race.event_id end -->

        <!-- Display race.year_id start -->
        <td>
          <%= race.year_id %>
        </td>
        <!-- Display race.year_id end -->

        <!-- Display race.location_id start -->
        <td>
          <%= race.location_id %>
        </td>
        <!-- Display race.location_id end -->

        <!-- Display race.created_at start -->
        <td>
          <%= time_ago_in_words(race.created_at) %> ago
        </td>
        <!-- Display race.created_at end -->

        <!-- Display race.updated_at start -->
        <td>
          <%= time_ago_in_words(race.updated_at) %> ago
        </td>
        <!-- Display race.updated_at end -->

        <td>
          <a href="/races/<%= race.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
